    "version": "0.2.0",
    "configurations": [
        {
            "name": "Train HelloWorld model locally",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/health_ml/runner.py",
            "args": [
                "--model=HelloWorld"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Train HelloWorld model in AzureML",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/health_ml/runner.py",
            "args": [
                "--model=HelloWorld",
                "--cluster=itplabrr1cl1",
                "--conda_env=${workspaceFolder}/../hi-ml-cpath/environment.yml",
                "--tag=my_display_name"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Train HelloWorld model with cross-validation",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/health_ml/runner.py",
            "args": [
                "--model=HelloWorld",
                "--cluster=lite-testing-ds2",
                "--crossval_count=2"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Setup hi-ml package",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/setup.py",
            "args": [
                "sdist",
                "bdist_wheel"
            ],
            "console": "integratedTerminal"
        },
    ]
}
